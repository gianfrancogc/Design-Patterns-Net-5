@model List<DecoratorDemoMvc.Models.Player>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col">
        <h1>Players</h1>
    </div>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
               Name
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

            </tr>
        }
    </tbody>
</table>